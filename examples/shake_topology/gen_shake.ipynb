    "from PQAnalysis.io import TrajectoryReader\n",
    "\n",
    "input_file = \"./perylene-md-01.xyz\"\n",
    "reader = TrajectoryReader(input_file)\n",
    "\n",
    "traj = reader.read()\n",
    "traj"
   ]
